.shai-btn {
  position: fixed;
  bottom: 70px;
  right: 10px;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.s-bt {
  display: block;
}
.s-tx {
  height: 80rpx;
  width: 80rpx;
  float: left;
}
.s-tx image {
  border-radius: 40rpx;
}
.s-mc {
  float: left;
  line-height: 80rpx;
  padding-left: 30rpx;
  font-size: 26rpx;
}
.s-sj {
  float: right;
  line-height: 80rpx;
  padding-right: 10rpx;
  color: #999;
}
.s-qc {
  clear: both;
}
.s-zw {
  padding: 20rpx 0;
  justify-content: space-between;
  color: var(--mainColor);
  font-size: 16px;
  text-align: justify;
  line-height: 1.6;
}
.s-img-box {
  float: left;
}
.s-img-box image {
  width: 190rpx;
  height: 120rpx;
  margin-bottom: 16rpx;
  margin-left: 16rpx;
}
.s-img-box text {
  color: #000000;
  font-size: 26rpx;
}
.box_head {
  position: -webkit-sticky;
  position: sticky;
  top: 88rpx;
  left: 0;
  background: #FAFAFA;
  z-index: 2021;
  width: 100%;
}
.box_head .box_head_li {
  flex: 1;
  font-size: 30rpx;
  height: 90rpx;
  font-weight: bold;
}
.box_head .active {
  color: #F6AF32;
}
.box_ul {
  padding: 0 30rpx 98rpx 30rpx;
}
.box_ul .box_ul_li {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}
.box_ul .box_ul_li .box_ul_li_img {
  margin-right: 20rpx;
}
.box_ul .box_ul_li .box_ul_li_img image {
  width: 168rpx;
  height: 168rpx;
  border-radius: 10rpx;
}
.box_ul .box_ul_li .box_ul_li_main {
  flex: 1;
}
.box_ul .box_ul_li .box_ul_li_name {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.box_ul .box_ul_li .box_ul_li_price {
  margin: 15rpx 0;
}
.box_ul .box_ul_li .box_ul_li_price text {
  color: #CF271B;
  font-size: 28rpx;
}
.box_ul .box_ul_li .box_ul_li_price image {
  width: 44rpx;
  height: 44rpx;
}
.box_ul .box_ul_li .box_ul_li_time {
  color: #999999;
  font-size: 22rpx;
}
.box_footer {
  height: 98rpx;
  z-index: 20;
  position: fixed;
  bottom: 50px;
  width: 100%;
  padding: 0 30rpx;
  background: #FFFFFF;
}
.box_footer .box_footer_all image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
}
.box_footer .box_footer_all text {
  color: #000000;
  font-size: 28rpx;
}
.box_footer .box_footer_li {
  color: #FFFFFF;
  width: 220rpx;
  height: 78rpx;
  border-radius: 39rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.box_footer .box_footer_li:first-child {
  background: #FA7E48;
}
.box_footer .box_footer_li:last-child {
  background: #F6AF32;
}

